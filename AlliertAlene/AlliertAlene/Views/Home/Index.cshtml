@section SPAViews {
    <link href="~/bower_components/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css" rel="stylesheet" />
    <link href="~/bower_components/magnific-popup/dist/magnific-popup.css" rel="stylesheet" />
    @Html.Partial("_Home")
}
@section Scripts{
    @Scripts.Render("~/bundles/app")
    <script src="~/bower_components/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/bower_components/magnific-popup/dist/jquery.magnific-popup.min.js"></script>
<script>
    (function ($) {
        $(window).load(function () {
            $("#infoBox").mCustomScrollbar();
            $(".pop-img").magnificPopup({ type: 'image' });
        });
    })(jQuery);
</script>
}